@{
    ViewData["Title"] = "Home";
}

<div class="row text-center">
    <div class="col-sm-12">
<pre>
    <code id="caption" style="display:none">
        =====================================================================================
        HHHH    HHHHH   HHHHH   HHHHH   H       HHHHH   HHHHH   HHHHH   HHHHH   H       HHHH
         H   H   H   H     H       H     H       H       H         H     H       H       H   H
         HHHH    HHHHH     H       H     H       HHHHH   HHHHH     H     HHHHH   H       H   H
         H   H   H   H     H       H     H       H       H         H     H       H       H   H
        HHHH    H   H     H       H     HHHHH   HHHHH   H       HHHHH   HHHHH   HHHHH   HHHH
        =====================================================================================
    </code>
</pre>
    </div>
</div>

@section Scripts{

<script type="text/javascript">

    let animateCaption = () => {
        let caption = $("#caption");
        $(caption).hide();
        let captionText = $(caption).text();
        $(caption).text("");
        $(caption).show();

        let currentPosition = 0;
        if (captionText.length > 0) {
            let timer = setInterval(() => {
                let currentText = $(caption).text();
                $(caption).text(currentText + captionText.substr(currentPosition++, 1));

                if (currentPosition == captionText.length - 1) clearInterval(timer);

            }, 10);
        }

    };

    $(document).ready(() => {
        animateCaption();
    });

</script>

}

